{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*", "../shared"],
  "exclude": ["node_modules"]
}